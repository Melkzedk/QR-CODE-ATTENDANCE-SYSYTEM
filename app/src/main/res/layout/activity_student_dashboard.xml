<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Heading -->
        <TextView
            android:id="@+id/dashboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Attendance Info -->
        <TextView
            android:id="@+id/attendanceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Attendance:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attendanceValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Subject Selector -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Subject:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/subjectSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp" />

        <!-- Scan QR -->
        <Button
            android:id="@+id/scanQRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Attendance (Scan QR)"
            android:layout_marginBottom="16dp" />

        <!-- New features -->
        <Button
            android:id="@+id/viewAttendanceHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Attendance History"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/viewAnnouncementsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Announcements"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/downloadReportBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Attendance Report"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/profileSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile / Settings"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/contactLecturerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Lecturer"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/viewTimetableBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Timetable (Optional)" />

    </LinearLayout>
</ScrollView>
