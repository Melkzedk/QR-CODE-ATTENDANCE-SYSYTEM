<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Heading -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dashboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Attendance Info -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/attendanceLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Attendance:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/attendanceValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Subject Selector with Exposed Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/subjectDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Subject" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanQRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Attendance (Scan QR)"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewAttendanceHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Attendance History"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewAnnouncementsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Announcements"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadReportBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Attendance Report"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profileSettingsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile / Settings"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactLecturerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Lecturer"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewTimetableBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Timetable (Optional)" />

    </LinearLayout>
</ScrollView>
